---
import BaseHead from '@components/BaseHead.astro'
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts'
---

<!doctype html>
<html lang='en'>
  <head transition:animate='none'>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main transition:animate='slide' class='pt-28 relative'>
      <div class='background-grid'>
        <span></span>
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div
        class='px-16 relative min-h-[calc(100dvh-7rem)] flex items-center justify-center text-center'
      >
        <h1 class='text-[4.2vw]'>
          Criação de sites estratégicos para <br /> elevar seu negócio ao próximo
          nível.
        </h1>
      </div>
    </main>
    <Footer />
  </body>
</html>
